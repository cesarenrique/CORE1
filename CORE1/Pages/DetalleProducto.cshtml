@page
@model CORE1.Pages.DetalleProductoModel

@{
    ViewData["Title"] = "DetalleProducto";
}


@if (Model.Producto != null)
{

    <h1>@Html.DisplayFor(model => model.Producto.Nombre)</h1>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Precio)
        </dd>

        @if(Model.Categoria!=null){
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.CategoriaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Model.Categoria.Nombre
        </dd>
        }
        @if(Model.Marca!=null){
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.MarcaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Model.Marca.Nombre
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.MarcaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Model.Marca.Xurl
        </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Producto.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
}
else
{
    <h1>Atencion</h1>
    <div class="alert alert-danger">No se ha encontrado datos</div>

}