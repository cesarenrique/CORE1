@page
@model CORE1.Pages.Account.LoginModel
@{
	ViewData["Title"] = "Iniciar sesión";
}
@if(ViewData["error"] != null && ViewData["error"].ToString()!="")
{
	<div class="alert alert-danger" role="alert">
		Error: @ViewData["error"].ToString()
	</div>
}
<form asp-page="./Login" method="post" class="form">
	<div class="form-group row">
		<label for="usu" class="col-dm-1 form-label">Usuario:</label>
		<div class="col-md-3">
			<input type="text" name="usu" id="usu" class="form-control"  required/>
		</div>
	</div>
	<div class="form-group row">
		<label for="pwd" class="col-dm-1 form-label">Password:</label>
		<div class="col-md-3">
			<input type="password" name="pwd" id="pwd" class="form-control" required />
		</div>
	</div>
	<div class=form-group row">
		<div class="offset-md-3">
			<input type="hidden" name="returnUrl" value="@ViewData["returnURL"]" />
			<input type="submit" value="Iniciar sesión" class="btn btn-primary" />

		</div>
	</div>
</form>